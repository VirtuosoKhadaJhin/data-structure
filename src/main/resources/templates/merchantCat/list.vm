#parse("common/list_start.vm")
<style>
    .table th, .table td {
        padding: 8px;
        line-height: 20px;
        text-align: center;
        vertical-align: top;
        border-top: 1px solid #ddd;
    }
    .empty-data {
        color: #b3afaf;
    }
</style>
<div id="breadcrumb"><a href="/index" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i>
    主页</a>
    <a href="/merchantCat/list" class="tip-bottom" data-original-title="">商户分类</a>
</div>
<div class="widget-title">
    <span class="icon"><i class="icon-th"></i></span>
    <h5>商户分类列表</h5>
    <a class="btn btn-mini btn-info buttons" href="edit?type=1">新增</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>分类名称</th>
        <th>分类名称（本地）</th>
        <th>分类名称（英语）</th>
        <th>简称</th>
        <th>分类属性</th>
        <th>是否显示</th>
        <th width="100px">操作</th>
    </tr>
    </thead>
    <tbody>
        #foreach($entity in $!page.content)
        <tr>
            <td class="tdInput">$!entity.id</td>
            <td class="tdInput">
                #if("$!entity.pcat.name" == "")
                    $!entity.name
                    <img src="$!entity.imageUrl" width="20px" height="20px">
                #else
                    $!entity.name
                #end
            </td>
            <td class="tdInput">
                #if("$!entity.localNameLabel" != "")
                    $!entity.localNameLabel
                #else
                    <span class="empty-data">暂无</span>
                #end
            </td>
            <td class="tdInput">
                #if("$!entity.enNameLabel" != "")
                    $!entity.enNameLabel
                #else
                    <span class="empty-data">暂无</span>
                #end
            </td>
            <td class="tdInput">
                #if("$!entity.shortname" != "")
                    $!entity.shortname
                #else
                    <span class="empty-data">暂无</span>
                #end
            </td>
            <td class="tdInput"> #if("$!entity.pcat" == "")一级 #else 二级 #end</td>
            <td class="tdInput">
                #if($!entity.display) 显示 #else 隐藏 #end
            </td>
            <td class="tdInput">
                <a href="edit?type=2&id=$!entity.id" class="btn btn-info btn-mini">编辑</a>
                <a href="edit?type=2&id=$!entity.id" class="btn btn-success btn-mini back-ground">
                    子集<i class="icon-plus" style="margin-left: 5px;"></i>
                </a>
            </td>
        </tr>
        #end
    </tbody>
</table>


#parse("common/list_mid.vm")
<form class="form-horizontal " method="get">
    <div class="control-group" style="margin-bottom: 10px">
        <label>分类名称 或ID</label>
        <input type="text" class="span11" name="nameOrId" value="$!nameOrId">
    </div>
    <div class="control-group" style="margin-bottom: 10px">
        <label>是否显示</label>
        <select name="display">
            <option value="">全部</option>
            <option value="true"  #if($!entity.display==true)  selected #end>显示</option>
            <option value="false"  #if($!entity.display==false)  selected #end>隐藏</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">查询</button>
</form>
#parse("common/list_end.vm")

