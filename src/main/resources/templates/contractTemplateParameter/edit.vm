<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>暖游 后台管理系统 菜单管理</title>
    #include("common/css-support.vm")
</head>
<body>
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="/index" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a>
            <a href="/templateParameter/list" class="tip-bottom" data-original-title="">模板参数管理</a>
            <a href="#" class="tip-bottom" data-original-title="">编辑</a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span6">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>编辑&查看</h5>
                        <input id="type" name="type" type="hidden" value="$!type">
                    </div>
                    <div class="widget-content nopadding">
                        <form action="update" method="post"
                              class="form-horizontal templateFormValidate"
                              role="form">
                            <div class="control-group">
                                <label class="control-label">国家</label>
                                <div class="controls">
                                    <select name="countryId" class="span11" target-name="cityId"
                                            target-url="/city/api/getCitys">
                                        <option value="0">全部</option>
                                        #foreach($e in $!countries)
                                            <option value="$!e.id" #if($!e.id == $!entity.countryId)
                                                    selected #end>$!e.name</option>
                                        #end
                                    </select>
                                </div>

                                <label class="control-label">标题</label>
                                <div class="controls">
                                    <input name="title" type="text" class="span11" value="$!entity.title"">
                                </div>

                                <label class="control-label">类型</label>
                                <div class="controls">
                                    <input name="title" type="text" class="span11" value="$!entity.type"">
                                </div>


                            <table class="table table-bordered table-striped" id="mytable">
                                <tbody>
                                <tr id="0">
                                    <th id="positionid0">参数ID</th>
                                    <th id="roleSuperid0">key</th>
                                    <th id="roleSuperid0">remark</th>
                                    <th>参数操作</th>
                                    <th>行操作</th>
                                </tr>
                                <tr>
                                    <td><input value="1"></td>
                                    <td>mch_name</td>
                                    <td>1</td>
                                    <td></td>
                                    <td><input type="button" value="添加行" class="addRow btn-info"></td>
                                </tr>
                                <tr>
                                    <td><input name="paramId" value="2"></td>
                                    <td>start_time</td>
                                    <td>2</td>
                                    <td></td>
                                    <td><input type="button" value="添加行" class="addRow btn-info"></td>
                                </tr>
                                <tr>
                                    <td><input name="paramId" value="3"></td>
                                    <td>end_time</td>
                                    <td>3</td>
                                    <td></td>
                                    <td><input type="button" value="添加行" class="addRow btn-info"></td>
                                </tr>
                                <tr>
                                    <td><input name="paramId"></td>
                                    <td><input name="key"></td>
                                    <td><input name="remark"></td>
                                    <td>
                                        <input type='button' value="选择参数" class="selectOne btn-info">
                                        <input type='button' value="自定义参数" class="selectOne btn-info">
                                    </td>
                                    <td>
                                        <input type="button" value="添加行" class="addRow btn-info">
                                        <input type='button' value="删除行" class="removeRow btn-warning">

                                    </td>
                                </tr>
                                </tbody>
                            </table>


                            <div class="form-actions">
                                <button type="submit" class="btn btnSave btn-success">保存
                                </button>
                                #if($!type==2 || $!type==1)
                                    <button type="submit" class="btn btn-success">保存
                                    </button>
                                #elseif($!type==3)
                                    <a href="edit?type=2&id=$!entity.id"
                                       class="btn btn-info">编辑</a>
                                    <a class="btn btn-mini btn-info buttons" href="edit?type=1">新增</a>
                                    <a class="btn btn-primary" href="list">返回</a>
                                #end
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</body>
    #include("common/js-support.vm")
    #include("common/image-support.vm")
<script src="/dist/js/cascade-select.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnSave").click(function () {
            var type = $("select[name='type']").val();
            var imgUrl = $("input[name='imgUrl ']").val();
            var linkUrl = $("input[name='linkUrl  ']").val();
            var source = $("input[name='source']").val();
            var title = $("input[name='title']").val();
            if (type == 1) {
                if (imgUrl == "" || linkUrl == "" || source == "" || title == "") {
                    return alert("自定义时标题、图片、链接、追踪码不可为空");
                }
            } else {
                if (source == "") {
                    return alert("非自定义时追踪码不可为空");
                }
            }

            if (!$('.templateFormValidate').validate) {
                return false;
            } else {
                $('.templateFormValidate').submit();
            }


        });


        $(".selectOne").on("click", function () {
            window.open("/item/list", "", "height=900, width=900");
        });

        var tr_index = 0;


        $("#mytable").delegate(".removeRow", "click", function (e) {
            var currEle = e.currentTarget;
            $(currEle).parent().parent().remove();
        });

        $("#mytable").delegate(".addRow", "click", function (e) {
            var table = $("#mytable");
            var trHTML =
                    "<tr>" +
                    "<td><input name=\"paramId\"></td>" +
                    "<td><input></td>" +
                    "<td><input></td>" +
                    "<td> " +
                    "<input type=\"button\" value=\"添加行\" class=\"addRow btn-info\">  " +
                    "<input type=\"button\" value=\"删 除\" class=\"removeRow btn-warning\" > " +
                    "<input type=\"button\" value=\"选 择\" class=\"selectOne btn-info\" > " +
                    "</td>"
            "</tr>";
            table.append(trHTML);
        });


        $(".templateFormValidate").validate({
            rules: {
                sort: {
                    digits: true
                },
                title: {
                    maxlength: 50
                },
                source: {
                    required: true, maxlength: 20
                }
            },
            errorPlacement: function (error, element) {
                $(element)
                        .closest("form")
                        .find(element)
                        .after(error);
            },
            errorElement: "span"
        });


    });

</script>
</html>
