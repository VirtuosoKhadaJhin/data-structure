<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>暖游 后台管理系统 菜单管理</title>

    #include("common/css-support.vm")
</head>
<body>
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <div id="breadcrumb">
                <a href="/index" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a>
                <a href="list1" class="tip-bottom" data-original-title="">多语言管理</a>
                <a href="javascipt:void(0)" class="tip-bottom" data-original-title="">新增</a>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title"><span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>新增多语言</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form action="update" method="post" class="form-horizontal langsDicFormValidate" role="form"
                                  id="cityform">
                                <div class="control-group">
                                    <label class="control-label">keyCode</label>
                                    <div class="controls">
                                        <input for="name" id="keyCode" name="keyCode" type="text" class="span7"
                                               value="$!entity.keyCode" onchange="verifykeyCode()">
                                        <label id="keyCodeStatus" class="control-label" style="display:none;padding-right: 8em;float: right;color:red;text-align: left;padding-top: 5px;">KeyCode重复</label>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">多语言分类</label>
                                    <div class="controls">
                                        <select class="span7 select2 " name="categoryId">
                                            #foreach($e in $!selectableLangsCategory)
                                                <option value="$!e.id">$!e.name</option>
                                            #end
                                        </select>
                                    </div>
                                </div>


                                #foreach($langCountry in $!langsCountries)
                                    <div class="control-group">
                                        <label class="control-label">$!langCountry.desc ($!langCountry.value)</label>
                                        <div class="controls">
                                            <input name="keyCodes" data-key="$!langCountry.key" type="text" class="span7 countryLanguage">
                                        </div>
                                    </div>
                                #end

                                <div class="form-actions">
                                    <button type="button" id="saveBtn" onclick="saveLangsDictionary()" class="btn btnSave btn-success">保存</button>
                                    <a class="btn btn-primary" onclick="backLangsDictionaryList()">返回</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    #include("common/js-support.vm")

    <script type="text/javascript">
    function backLangsDictionaryList(){
       location.href = "list";
    }
    /**
     * 验证keyCode是否重复
     */
    function verifykeyCode(){
        var request = {};
        var keyCode = $("input[name='keyCode']").val();

        request.keyCode = keyCode;
        $.ajax({
            url: 'verifykeyCode',
            data: JSON.stringify(request),
            type: 'post',
            dataType: 'json',
            contentType: 'application/json',
            success: function (result) {
                if (result.code == 0) {
                    console.log(result.data);
                    if(!result.data){
                        $("#keyCodeStatus").show();
                        $("#saveBtn").attr("onclick", "");
                        $("#keyCode").css("border","1px solid red");
                        $("#saveBtn").attr("style", "background-color: gray;");
                    }else{
                        $("#keyCodeStatus").hide();
                        $("#saveBtn").attr("style", "");
                        $("#keyCode").css("border","");
                        $("#saveBtn").attr("onclick", "saveLangsDictionary()");
                    }
                }
            }
        });
    }
    /**
     * 保存多语言
     */
    function saveLangsDictionary(){
        var request = {};

        request.keyCode = $("input[name='keyCode']").val();
        request.categoryId = parseInt($("select[name='categoryId']").val());

        var langsMessageList = [];
        var keyCodes = document.getElementsByName("keyCodes");

        for (var i = 0, j = keyCodes.length; i < j; i++){
            var keyCodeInput = keyCodes[i];
            var langsKey = parseInt(keyCodeInput.getAttribute("data-key"));
            var message = keyCodeInput.value;
            var langsCountryMessageVo = { langsKey : langsKey, message : message};
            langsMessageList.push(langsCountryMessageVo);
        }

        request.langsMessageList = langsMessageList;

        console.log("requestJsonBody:" + request);

        $.ajax({
            url: 'saveLangsDictionary',
            data: JSON.stringify(request),
            type: 'post',
            dataType: 'json',
            contentType: 'application/json',
            success: function (result) {
                if (result.code == 0) {
                    alert("操作成功");
                    window.location.href = "list";
                } else {
                    alert(result.msg);
                }
            }
        });
    }
    </script>
</body>
</html>
