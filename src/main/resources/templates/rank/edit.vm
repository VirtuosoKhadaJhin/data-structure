<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>暖游 后台管理系统</title>
    #include("common/css-support.vm")
</head>
<body>
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <div id="breadcrumb">
                <a href="/index" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a>
                <a href="../rank/list" class="tip-bottom" data-original-title="">榜单管理</a>
                <a href="javascipt:void(0)" class="tip-bottom" data-original-title="">编辑/查看</a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <form action="update" method="post" class="form-horizontal commonValidate" role="form" id="cityform">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title"><span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>榜单编辑&查看</h5>
                        </div>
                        <div class="widget-content nopadding">

                            <div class="control-group">
                                <span class="col-sm-2 control-label">ID</span>
                                <div class="controls">
                                    #if($!type==2)
                                        <input name="id" readonly type="text" class="form-control" placeholder="ID" value="$!entity.id">
                                    #end
                                    #if($!type==3)
                                        <label>$!entity.id</label>
                                    #end
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">排行</label>
                                <div class="controls">
                                    <input for="sort" name="sort" type="text" class="span7" placeholder="排行"
                                           value="$!entity.sort">
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">类型</label>
                                <div class="controls">
                                    <select id="objtype" name="objtype">
                                        <option value="1" #if($!entity.objtype == 1) selected #end>商户</option>
                                        <option value="2" #if($!entity.objtype == 2) selected #end>团购</option>
                                    </select>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">类型值(商户/团购))</label>
                                <div class="controls">

                                    <input for="objid" name="objid" type="hidden" class="span7" placeholder="ID"
                                           value="$!entity.objid">
                                    #if($!entity.objtype == 1)
                                        <input for="value" name="value" type="text" class="span7"
                                               placeholder="类型值"
                                               value="商家:$!entity.merchant.id : $!entity.merchant.name">


                                    #elseif($!entity.objtype == 2)
                                        <input for="value" name="value" type="text" class="span7"
                                               placeholder="类型值"
                                               value="团购:$!entity.item.id : $!entity.item.name">

                                        #else

                                        <input for="value" name="value" type="text" class="span7"
                                               placeholder="类型值"
                                               value="">

                                    #end
                                    <button class="btn btn-success setDetail" type="button">设置值</button>


                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">国家</label>
                                <div class="controls">
                                    <select id="country.id" name="country.id"  class="span7" target-name="city.id"  target-url="/city/api/getCitys" >
                                        <option value="">请选择</option>
                                        #foreach($e in $!countries)
                                            <option value="$!e.id" #if($!entity.country.id==$!e.id)
                                                    selected #end>$!e.id:$!e.name</option>
                                        #end
                                    </select>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">城市</label>
                                <div class="controls">
                                    <select id="city.id" name="city.id" class="span7"
                                            def-value="$!entity.city.id">
                                        <option value="">请选择</option>
                                    </select>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label">是否显示</label>
                                <div class="controls">
                                    <select id="display" name="display" >
                                        <option value="true"  #if($!entity.display==true)  selected #end>显示</option>
                                        <option value="false"  #if($!entity.display==false)  selected #end>隐藏
                                        </option>
                                    </select>
                                </div>
                            </div>



                            <div class="form-actions">
                                #if($!type==2 || $!type==1)
                                    <button type="submit" class="btn btn-success">保存</button>
                                #end
                                #if($!type==3)
                                    <a href="edit?type=2&id=$!entity.id" class="btn btn-info">编辑</a>
                                #end

                                <a class="btn btn-primary goback" href="list">返回</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!--***************************************模态框begin*************************************************************-->

#*<div id="modal-merchant" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">*#
<div id="modal-merchant" class="modal hide fade" role="dialog" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>商户选择</h3>
    </div>
    <div class="modal-body">


        <div class="control-group">
            <label class="control-label">商户分类</label>
            <div class="controls">
                <select id="merchantCatId" name="merchantCatId"  class="span7 select2"
                        style="width: 200px" target-url="/merchant/api/list" target-name="merchantId">
                    <option value="0">全部</option>
                    #foreach($e in $!cats)
                        <option value="$!e.id">$!e.id:$!e.name</option>
                    #end
                </select>
            </div>
        </div>



        <div class="control-group">
            <label class="control-label">商户</label>
            <div class="controls">
                <select id="merchantId" name="merchantId" class="span7 child select2" style="width: 200px">
                    <option value="0">全部</option>
                </select>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        <a href="javascript:void(0);" id="merchant-save" class="btn btn-primary">保存</a>
    </div>
</div>

<!--***************************************模态框end*************************************************************-->


<!--***************************************模态框begin*************************************************************-->

<div id="modal-tuan" class="modal hide fade"  role="dialog" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>团购选择</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            <label class="control-label">团购</label>
            <div class="controls">
                <select id="tuanId" name="tuanId"  class="select2" style="width: 200px">
                    <option value="0">全部</option>
                    #foreach($e in $!tuans)
                        <option value="$!e.id">$!e.id:$!e.name</option>
                    #end
                </select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        <a href="javascript:void(0);" id="tuan-save" class="btn btn-primary">保存</a>
    </div>
</div>

<!--***************************************模态框end*************************************************************-->
#include("common/js-support.vm")
<script src="/dist/js/cascade-select.js"></script>
<script>

    $(document).ready(function () {
        var type = $!type;
        if (type == 3) {
            $(":text").attr("disabled", "disabled");
            $("select").attr("disabled", "disabled");
        }
    });


    $(".setDetail").bind("click", function () {
        var objtype = $("select[name='objtype']").val();
        if (objtype == 1) {
            $("#modal-merchant").modal("show");
        } else {
            $("#modal-tuan").modal("show");
        }
    });


    $("#merchant-save").bind("click", function () {
        var merchantId = $("#merchantId").val();
        var value = $("#merchantId").find("option:selected").text();
        if (!merchantId) {
            return alert("请选择!");
        } else {
            $("input[name='objid']").val(merchantId);
            $("input[name='value']").val(value);
            $("#modal-merchant").modal("hide");
        }
    });



    $("#tuan-save").bind("click", function () {
        var tuanId = $("#tuanId").val();
        var value = $("#tuanId").find("option:selected").text();
        if (!tuanId) {
            return alert("请选择!");
        } else {
            $("input[name='objid']").val(tuanId);
            $("input[name='value']").val(value);
            $("#modal-tuan").modal("hide");
        }
    });
    $('.select2').select2();
</script>



</body>
</html>
