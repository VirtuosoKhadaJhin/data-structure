<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>暖游 后台管理系统 菜单管理</title>

    #include("common/css-support.vm")
</head>
<body>
<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <div id="breadcrumb">
                <a href="/index" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> 主页</a>
                <a href="list" class="tip-bottom" data-original-title="">订单管理</a>
                <a href="javascipt:void(0)" class="tip-bottom" data-original-title="">编辑/查看</a>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title"><span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>订单查看</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form action="update" method="post" class="form-horizontal featureValidate" role="form"
                                  id="">




                                <div class="control-group">
                                    <label class="control-label">订单编号</label>
                                    <div class="controls">
                                        $!order.ordersn
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">流水号</label>
                                    <div class="controls">
                                        $!order.transactionid
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">订单类型</label>
                                    <div class="controls">
                                        $!order.ordertype.name
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">订单状态</label>
                                    <div class="controls">
                                        $!order.orderstatus.name
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">商户</label>
                                    <div class="controls">
                                        $!order.merchant.name
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">下单时间</label>
                                    <div class="controls">
                                        $!dateFormatter.format("yyyy-MM-dd HH:mm:ss",$!order.createtime)
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">支付时间</label>
                                    <div class="controls">
                                        $!dateFormatter.format("yyyy-MM-dd HH:mm:ss",$!order.paytime)
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">使用时间</label>
                                    <div class="controls">
                                        $!dateFormatter.format("yyyy-MM-dd HH:mm:ss",$!order.usetime)
                                    </div>
                                </div>







                                <div class="control-group">
                                    <label class="control-label">短信通知状态</label>
                                    <div class="controls">
                                        $!sms.code
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">短信通知次数</label>
                                    <div class="controls">
                                        $!sms.times
                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">购买次数</label>
                                    <div class="controls">
                                        $!buyNum
                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">优付优惠（本地）</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!order.youfulocalereduce)
                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">优付优惠（人民币）</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!order.youfurmbreduce)

                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">商户优惠（本地）</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!order.mchlocalereduce)
                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">商户优惠（人民币）</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!order.mchrmbreduce)
                                    </div>

                                </div>
                                <div class="control-group">
                                    <label class="control-label">收货地址</label>
                                    <div class="controls">
                                        $!logistics.fullAddress
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">买家留言</label>
                                    <div class="controls">
                                        $!order.message
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">购买人</label>
                                    <div class="controls">
                                        $!user.nickname
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">手机</label>
                                    <div class="controls">
                                        $!userTel.tel
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">邮费（RMB）</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!directMail.postageRmb)
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">邮费</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!directMail.postage)
                                    </div>
                                </div>


                                <div class="control-group">
                                    <label class="control-label">邮编</label>
                                    <div class="controls">
                                        $!sms.code
                                    </div>
                                </div>





                                <div class="control-group">
                                    <label class="control-label">原价(本地)</label>
                                    <div class="controls">
                                        $!numberFormatter.format("#0.00",$!order.okpprice)
                                    </div>
                                </div>



                                <div class="form-actions">
                                    #if($!type==2 || $!type==1)

                                    #elseif($!type==3)
                                        <a href="edit?type=2&id=$!entity.id" class="btn btn-info">编辑</a>
                                    #end
                                </div>

                                <button class="btn btn-primary" href="list" onclick="window.history.go(-1);">返回</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    #include("common/js-support.vm")
    #include("common/image-support.vm")
    <script src="/dist/js/cascade-select.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var type = $!type;
            if (type == 3) {
                $(":text").attr("disabled", "disabled");
                $("select").attr("disabled", "disabled");

            }
        });
    </script>
</body>
</html>
